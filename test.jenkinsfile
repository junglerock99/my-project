pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *')
    }
    environment {
        BUILD_MSG = 'Building...'
    }
    options {
        timeout(time: 30, unit: 'MINUTES') 
        timestamps()
    }
    stages {
        stage('Build') {
            steps {
                echo "$BUILD_MSG"
                // Get code from github repository
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/main']],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [[$class: 'CleanCheckout']],
                    submoduleCfg: [], 
                    credentialsId: 'github-credentials',
                    userRemoteConfigs: [[url: 'https://github.com/junglerock99/my-project.git']]])
            }
            post {
                success {
                    echo 'Build stage succeeded'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }    
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
    post {
        always { 
            echo 'Always output after all stages'
        }
        success {
            echo 'Output on success'
        }
        failure {
            echo 'Output on failure'
        }
        cleanup {
            echo 'Cleaning up after all stages'
        }
    }
}

