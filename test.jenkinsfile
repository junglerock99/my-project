# Jenkinsfile
pipeline {
    #
    agent any
    triggers { 
        pollSCM('H/2 * * * *')
    }
    environment {
        BUILD_MSG = 'Building...'
    }
    options {
        timeout(time: 1, unit: 'MINUTES') 
        timestamps()
    }
    stages {
        #
        stage('Build') {
            steps {
                echo "$BUILD_MSG"
            }
            post {
                success {
                    echo 'Build stage succeeded'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }    
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
    post {
        always { 
            echo 'post - always'
        }
        success {
            echo 'post - success'
        }
        failure {
            echo 'post - failure'
        }
        cleanup {
            echo 'post - cleanup'
        }
    }
}

